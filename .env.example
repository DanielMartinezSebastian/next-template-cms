# Next.js Edit Mode Template - Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Next.js Edit Mode Template"

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================

# Default locale for the application
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Available locales (comma-separated)
NEXT_PUBLIC_LOCALES=en,es

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
# Example: postgresql://postgres:password@localhost:5432/nextjs_template
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Database connection pool settings (optional)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# =============================================================================
# TRANSLATION SYSTEM
# =============================================================================

# Enable database translations (auto-detected if DATABASE_URL is set)
TRANSLATIONS_DATABASE_ENABLED=false

# Redis cache for translations (optional but recommended for production)
# Format: redis://username:password@host:port
# Example: redis://localhost:6379
REDIS_URL="redis://localhost:6379"

# Translation cache configuration
TRANSLATIONS_CACHE_TTL=300
TRANSLATIONS_CACHE_MAX_SIZE=104857600

# Debug translations (shows detailed logs in development)
DEBUG_TRANSLATIONS=false

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# NextAuth.js Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-super-secret-jwt-secret-here"

# NextAuth.js URL (auto-detected in most cases)
NEXTAUTH_URL=http://localhost:3000

# JWT signing key (optional, falls back to NEXTAUTH_SECRET)
JWT_SECRET="your-jwt-signing-secret"

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=""

# Sentry Error Tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# Vercel Analytics (optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# =============================================================================
# CONTENT MANAGEMENT
# =============================================================================

# File upload configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Admin panel configuration
ADMIN_PANEL_ENABLED=true
ADMIN_EMAIL="admin@example.com"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration for sending emails
SMTP_HOST=""
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@example.com"

# Email service provider (optional: sendgrid, mailgun, ses)
EMAIL_PROVIDER=""
EMAIL_API_KEY=""

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Enable detailed logging
ENABLE_LOGGING=true

# API rate limiting (requests per minute)
API_RATE_LIMIT=100

# Enable development features
DEV_MODE=true

# Playwright testing configuration
PLAYWRIGHT_BASE_URL=http://localhost:3000
PLAYWRIGHT_HEADLESS=true

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Redis configuration for general caching
CACHE_REDIS_URL="redis://localhost:6379"

# CDN configuration (optional)
CDN_URL=""
CDN_API_KEY=""

# Image optimization
NEXT_PUBLIC_IMAGE_DOMAINS="localhost,example.com"

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Application monitoring
MONITORING_ENABLED=false
MONITORING_API_KEY=""

# Performance monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=false

# User analytics
USER_ANALYTICS_ENABLED=false
ANALYTICS_API_KEY=""

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
FEATURE_VISUAL_EDITOR=true
FEATURE_AI_TRANSLATIONS=false
FEATURE_A_B_TESTING=false
FEATURE_REAL_TIME_COLLABORATION=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Content Security Policy
CSP_ENABLED=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployment environment
DEPLOYMENT_ENV=development

# Build configuration
BUILD_ANALYZE=false
BUILD_BUNDLE_ANALYZER=false

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT="/api/health"

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Database backup configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Site under maintenance. Please check back later."
